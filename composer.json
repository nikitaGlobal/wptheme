{
    "name": "nikitaglobal/wptheme",
    "description": "Basic theme",
    "type": "project",
    "authors": [
        {
            "name": "Nikita Menshutin",
            "email": "packagist@nikita.global",
            "homepage": "https://nikita.global/"
        }
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=5.3.0"
    },
    "autoload": {
        "psr-0": {
            "wptheme": "src/"
        }
    },
    "scripts": {
        "initTheme": [
            "php -r \"copy('vendor/nikitaglobal/wptheme/toTheme/styles.css', 'styles.css');\""
        ],
        "post-install-cmd": ["@initTheme"],
        "post-update-cmd": ["@initTheme"]
    }
}